@using LocalReads.Components
@using LocalReads.Services
@using MudBlazor
@inject IOpenLibraryService GoogleBooksService

<MudAppBar Style="padding: 10px">
    <div class="navbar-searchbox">
        <SearchBox OnSearch="HandleSearch"/>
    </div>
    <a href="/wishlist" Class="custom-link">
        <MudIcon Icon="@Icons.Material.Filled.Bookmark" Title="Bookmark" />
        Wishlist
    </a>

    <a href="/inprogress" Class="custom-link">
        <MudIcon Icon="@Icons.Material.Filled.Favorite" Title="Favorite" />
        In Progress
    </a>
    <a href="/alreadyread" Class="custom-link">
        <MudIcon Icon="@Icons.Material.Filled.CheckBox" Title="Read" />
        Already read
    </a>
</MudAppBar>

@code {
    private async Task HandleSearch(string term)
    {
        var test = await GoogleBooksService.GetBySearch(term);
        Console.WriteLine($"Search for: {term}");
    }
}