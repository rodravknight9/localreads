@using LocalReads.DTO

<div class="book-card">
    <img src="@Book.ImageLink" alt="Book Cover" class="book-img" />
    <div class="book-info">
        <h3>@Book.Title</h3>
        <p class="author">@Book.Authors</p>
        <p class="meta">@Book.Publisher, @Book.PublishedDate</p>
    </div>
</div>

@code {
    [Parameter]
    public BookDto Book { get; set; } 
}